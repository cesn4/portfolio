{
	"compilerOptions": {
		"outDir": "./dist/",
		"jsx": "react",
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": false,
		"baseUrl": "./",
		"paths": {
		"~/*": ["./src/*"]
		},
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
}